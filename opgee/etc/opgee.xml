<?xml version="1.0" encoding="UTF-8"?>
<!-- Working draft of XML file format -->
<!-- This file contains the standard OPGEEv4 LCA model. The metadata describintg fields, options,
     and default values is found in attributes.xml. When creating a new model, the user can start
     with the standard model and add/delete/alter elements in a separate file, or simply save copy
     and modify this file. We also (will) support site- and user-specific XML template files that
     define custom starting points.
     -->
<Model xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="opgee.xsd">
	<Analysis name="default">
		<!-- Global parameters -->
		<FunctionalUnit>oil</FunctionalUnit>
		<EnergyBasis>LHV</EnergyBasis>
		<!-- Are variables different than parameters? -->
		<!-- Are variables all global to the Analysis, or stored per element, e.g., Field, or both? -->
		<Variables>
			<A name="v1" type="float" unit="kWh/day">123.5</A>
			<A name="v2" unit="zzz">434</A>
		</Variables>
		<Field name="US_FW">
			<A name="location">USA</A>
			<A name="is_offshore">0</A>
			<A name="age">86</A>
			<A name="depth">4936</A>
			<A name="oil_prod">101295</A>
			<A name="num_prod_wells">41539</A>
			<A name="num_water_inj_wells">34426</A>
			<A name="well_diam">3.01</A>
			<A name="prod_index">37.53</A>
			<A name="res_press">887.31</A>
			<A name="res_temp">70.84</A>
			<!-- Where should Streams be defined? At the field level? Within the Process
			     that consumes them? (That should be unique, right?) Is there any need to
			     specify the source or destination then?
			     
			     Perhaps we define at the Field level only the streams that originate 
			     "in nature" rather that as output of another process? Then we might not
			     specify src or dst at all. If defined here, "src" is "the field", and "dst"
			     is defined by the process declaring this stream as an input.
			     -->
			<Stream number="1" name="oil in reservoir" src="_" dst="ReservoirWellInterface">
				<Temperature unit="degF">70.8</Temperature>
				<Pressure unit="psia">887.3</Pressure>
				<Component name="oil" phase="liquid" unit="tonne/d">14555.9</Component>
				<Component name="H2O" phase="liquid" unit="tonne/d">2037.8</Component>
			</Stream>
			<Stream number="100" name="water in reservoir" src="_" dst="ReservoirWellInterface">
				<Temperature unit="degF">70.8</Temperature>
				<Pressure unit="psia">887.3</Pressure>
				<Component name="H2O" phase="liquid" unit="tonne/d">255636.1</Component>
			</Stream>
			<Stream number="25" name="gas from reservoir" src="_" dst="ReservoirWellInterface">
				<Temperature unit="degF">70.8</Temperature>
				<Pressure unit="psia">887.3</Pressure>
				<Component name="N2" phase="gas" unit="tonne/d">519.9</Component>
				<Component name="CO2" phase="gas" unit="tonne/d">8858.8</Component>
				<Component name="CH4" phase="gas" unit="tonne/d">22288.1</Component>
				<Component name="C2H6" phase="gas" unit="tonne/d">4495.1</Component>
				<Component name="C3H8" phase="gas" unit="tonne/d">4399.9</Component>
				<Component name="C4H10" phase="gas" unit="tonne/d">284.4</Component>
				<Component name="H2S" phase="gas" unit="tonne/d">1.5</Component>
			</Stream>
			<Aggregator name="Exploration">
				<Process class="Exploration" name="Exploration"/>
			</Aggregator>
			<Aggregator name="DrillingAndDevelopment">
				<Process class="DrillingAndDevelopment" name="Drilling &amp; development">
					<A name="productivity">medium</A>
					<A name="total_wells">2500</A>
				</Process>
				<Process class="LandUse"/>
				<Process class="Fracking"/>
			</Aggregator>
			<Process class="SurveyVehicle">
				<A name="type">ship</A>
				<A name="vehicle_weight" unit="tons">124</A>
				<A name="distance" unit="mi">2342</A>
			</Process>
			<Process class="SurveyVehicle">
				<A name="type">truck</A>
				<A name="vehicle_weight" unit="tons">123</A>
				<A name="distance" unit="mi">2342</A>
			</Process>
			<Aggregator name="Production_and_extraction">
				<Process class="ReservoirWellInterface" name="Reservoir-well interface">
					<A name="x">0</A>
				</Process>
				<Process class="DownholePump" name="Downhole pump (lifting)"/>
				<Process class="CrudeOilStorage" name="Crude Oil Storage"/>
				<Process class="GasLiftingCompressor" name="Gas Lifting Compressor"/>
				<Process class="WaterInjection" name="Water Injection"/>
				<Process class="GasReinjectionCompressor" name="Gas Reinjection Compressor"/>
				<Process class="CO2ReinjectionCompressor" name="CO2 Reinjection Compressor"/>
				<Process class="SourGasReinjectionCompressor" name="Sour Gas Reinjection Compressor"/>
				<Process class="GasFloodingCompressor" name="Gas Flooding Compressor"/>
				<!-- SteamInjection ?-->
				<Process class="Flaring" name="Flaring"/>
			</Aggregator>
			<Aggregator name="Surface_processing">
				<Process class="Separation" name="Separation"/>
				<Process class="ProducedWaterTreatment" name="Produced Water Treatment"/>
				<Process class="MakeupWaterTreatment" name="Makeup Water Treatment"/>
				<Process class="SteamGeneration" name="Steam Generation"/>
				<Process class="CrudeOilDewatering" name="Crude oil dewatering"/>
				<Process class="CrudeOilStabilization" name="Crude oil stabilization"/>
				<Process class="HeavyOilUpgrading" name="Heavy Oil Upgrading"/>
				<Process class="HeavyOilDilution" name="Heavy Oil Dilution"/>
				<Process class="GasGathering" name="Gas Gathering"/>
				<Process class="GasDehydration" name="Gas dehydration"/>
				<Process class="AcidGasRemoval" name="Acid Gas Removal"/>
				<Process class="Demethanizer" name="Demethanizer"/>
				<Process class="Chiller" name="Chiller"/>
				<Process class="PreMembraneCompressor" name="Pre-membrane Compressor"/>
				<Process class="CO2Membrane" name="CO2 Membrane"/>
				<Process class="RyanHolmes" name="Ryan-Holmes"/>
				<Process class="VRUCompressor" name="VRU Compressor"/>
				<Process class="Venting" name="Venting"/>
			</Aggregator>
			<Aggregator name="Liquefied_natural_gas">
				<Process class="LNGLiquefaction" name="LNG Liquefaction"/>
				<Process class="LNGTransport" name="LNG transport"/>
				<Process class="LNGRegasification" name="LNG regasification"/>
			</Aggregator>
			<Aggregator name="Maintenance">
				<Process class="Maintenance" name="Maintenance"/>
			</Aggregator>
			<Aggregator name="Waste_disposal">
				<Process class="WasteDisposal" name="Waste Disposal"/>
			</Aggregator>
			<Aggregator name="Transport_and_storage">
				<Process class="CrudeOilTransport" name="Crude Oil Transport"/>
				<Process class="DiluentTransport" name="Diluent Transport"/>
				<!-- GasTransmission? -->
				<Process class="StorageCompressor" name="Storage Compressor"/>
				<Process class="PostStorageCompressor" name="Post-Storage Compressor"/>
				<Process class="GasStorageWells" name="Gas storage wells"/>
				<Process class="StorageSeparator" name="Storage separator"/>
				<!-- energy summary calls the following 'Petcoke handling and storage' -->
				<Process class="PetcokeTransport" name="Petcoke transport"/>
			</Aggregator>
			<Aggregator name="Other">
			</Aggregator>
			<Aggregator name="Gas_distribution">
				<Process class="GasDistribution" name="Gas distribution"/>
			</Aggregator>
			<Aggregator name="Fuel_consumed_for_electricity_production">
				<Process class="ElectricityGenAndImports" name="Electricity Gen and Imports"/>
			</Aggregator>
			<Aggregator name="ToBeClassified">
				<Process class="FluidProduction"/>
				<Process class="FluidInjection"/>
				<Process class="BitumenMining" name="Bitumen mining" enabled="false"/>
				<Process class="HCGasInjectionWells" name="HC Gas Injection Wells"/>
				<Process class="CO2InjectionWells" name="CO2 Injection Wells"/>
				<Process class="SourGasInjectionWells" name="Sour Gas Injection Wells"/>
				<Process class="SteamInjectionWells" name="Steam injection wells"/>
				<Process class="GasFloodWells" name="Gas Flood Wells"/>
				<Process class="GasTransmissionCompressors" name="Gas transmission compressors"/>
				<Process class="GasPartitionA" name="Gas Partition A"/>
				<Process class="GasPartitionB" name="Gas Partition B"/>
				<Process class="FuelGasConsumed" name="Fuel Gas Consumed"/>
				<Process class="FuelGasImports" name="Fuel Gas Imports"/>
				<Process class="NGLOrDiluentProdAndImports" name="NGL or Diluent Prod and Imports"/>
			</Aggregator>
		</Field>
	</Analysis>
</Model>
